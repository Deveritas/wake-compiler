import Asserts;

every AssignmentsTest is:

	Bool -- testPlusEquals(Asserts) {
		var Num = 5;
		Num += 0;
		Asserts.that(Num)Equals(5);
		Num += 1;
		Asserts.that(Num)Equals(6);
		Num += 5;
		Asserts.that(Num)Equals(11);
		return Asserts.allPassed();
	}

	Bool -- testMinusEquals(Asserts) {
		var Num = 5;
		Num -= 0;
		Asserts.that(Num)Equals(5);
		Num -= 1;
		Asserts.that(Num)Equals(4);
		Num -= 4;
		Asserts.that(Num)Equals(0);
		return Asserts.allPassed();
	}

	Bool -- testTimesEquals(Asserts) {
		var Num = 5;
		Num *= 1;
		Asserts.that(Num)Equals(5);
		Num *= 5;
		Asserts.that(Num)Equals(25);
		Num *= 0;
		Asserts.that(Num)Equals(0);
		return Asserts.allPassed();
	}

	Bool -- testDivideEquals(Asserts) {
		var Num = 25;
		Num /= 5;
		Asserts.that(Num)Equals(5);
		Num /= 1;
		Asserts.that(Num)Equals(5);
		Num /= 5;
		Asserts.that(Num)Equals(1);
		return Asserts.allPassed();
	}

	Bool -- testUsingAssigmentReturnValues(Asserts) {
		var Num = 5;
		if((Num := 1) != 1) {
			return false;
		}

		Asserts.that(Num := 4)Equals(4);
		return Asserts.allPassed();
	}
